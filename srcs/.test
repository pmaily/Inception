version: '2.2'
services:
    nginx:
        build: requirements/nginx/
        container_name: nginx
        ports:
            - "443:443"
        links:
            - wordpress
        restart: always

    wordpress:
        build: requirements/wordpress/
        container_name: wordpress
        ports:
            - '9000:9000'
              #volumes:
         #- ./wordpress:/var/www/html
        links:
            - mariadb
        restart: always
        
    mariadb:
        build: requirements/mariadb/
        container_name: mariadb
        ports:
            - '3306:3306'
        restart: always

